<style>
    .doze {
        max-width: 100%;
        width: 395px;
        height: 395px;
        object-fit: cover;
    }

    .um {
        max-width: 100%;
        width: 150px;
        height: 150px;
        object-fit: cover;
    }
</style>
<h3>Produto</h3>
<hr>
<div class="card mt-4">

    <div class="card-header text-center">
        <b>
            <h4>{{produto.titulo}}</h4>
        </b>
        <small>{{produto.subtitulo}}</small><br>
        <br>
        <br>
        <div class="card-body">
        <div class="autor" class="blockquote-footer">Escrito por: {{produto.autor}}</div>
        <div class="data" class="d-flex justify-content-end">Data de Publicação: {{produto.data}}</div>
        </div>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-12 text-center">
                {{#if produto.imagem}}
                <img src="{{produto.imagem}}" class="doze" />
                {{/if}}
            </div>
            <br>
            <div class="col-12">
                <div class="container">
                    <h6 class="text-center">{{produto.texto}}</h6>
                </div>
            </div>
            <div class="col-12">
                <div class="container">
                    <h6 class="text-center">{{produto.textocom}}</h6>
                </div>
            </div>
            {{#if produto.video}}
            <div class="col-12 text-center">
                <iframe width="560" height="315" controls src="{{produto.video}}"></iframe>
            </div>
            {{/if}}
            {{#if produto.audio}}
            <div class="col-12 text-center">
                <iframe width="80%" height="166" src="{{produto.audio}}"></iframe>
            </div>                
            {{/if}}
        </div>
    </div>

</div>

