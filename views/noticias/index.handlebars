<style>
    .doze {
        max-width: 100%;
        width: 395px;
        height: 395px;
        object-fit: cover;
    }
</style>
<h2>NOTICIAS</h2>
<hr>
{{#each noticias}}
<div class="card mb-4" style="max-width: 80rem;">
    <div class="card-header">
        <h4 class="text-center">{{nome}}</h4>
        <div class="subtitulo">{{descricao}}</div>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-6">
                {{#if imagem}} <center><img src="{{imagem}}" class="doze" /> </center>{{/if}}
            </div>
            <div class="col-6">
                <h6 align="justify"></h6> {{conteudo}}
            </div>
        </div>
    </div>
    <div class="card-footer text-muted">
        <blockquote class="blockquote mb-0">
            <footer class="autor" class="blockquote-footer">Autor: {{autor}}</footer>
        </blockquote>
        <div class="data" class="d-flex justify-content-end">Data de Publicação: {{data}}</div>
    </div>
</div>
{{else}}
<h4 class="mt-3"> Nehuma Noticia registrada </h4>
{{/each}}